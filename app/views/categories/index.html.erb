<h1 class="h3 mb-2 text-gray-800">Categorias de productos</h1>

<div>
  <%= link_to new_category_path, {remote: true, class: "btn btn-info", id: "anadir-categoria-btn"}  do %>
    <i class="fa-solid fa-square-plus"></i> <span>Crear Categoría</span>
  <% end %>
</div>
<br />

<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
       <table id="tablaCategorias" class="table table-bordered" width="100%">
         <thead>
           <tr>
             <th>Nombre Categoría</th>
             <th>Descripcion</th>
             <th></th>
           </tr>
         </thead>
         <tbody>
         <% @categorias.each do |cat| %>
            <tr id="categoria_<%= cat.id %>" >
                <td><%= cat.nombre %></td>
                <td><%= cat.descripcion %></td>
                <td>
                <%= link_to edit_category_path(cat), html_options = {class: "btn btn-info btn-xs", remote: true} do %>
                  <i class="fa-solid fa-pen-to-square"></i> <span>Editar</span>
                <% end %>
                <%= link_to cat, remote: true, method: :delete, data: { confirm: "¿Borrar categoria: #{cat.nombre}?"}, class: "btn btn-danger btn-xs"  do %>
                  <i class="fa-solid fa-trash-can"></i><span> Eliminar</span>
                <% end %>
                </td>
            </tr>
         <% end %>
         </tbody>
       </table>
    </div>
  </div>
</div>
<%= render 'modal_categorias' %>
